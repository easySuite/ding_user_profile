 */
class DingUserProfileTestCase extends DrupalWebTestCase {
  /**
   * Test user credentials.
   *
   * @var array
   */
  protected $user_credentials = array(
    'name' => '1111111118',
    'pass' => '0000',
  );

  /**
   * Test ALMA URL.
   *
   * @var string
   */
  protected $alma_url = 'https://bibliotek.taarnby.dk:8000/alma/';

  public static function getInfo() {
    return array(
      'name' => t('Ding User Profile tests'),
      'description' => t('Run tests for ding_user_profile.'),
      'group' => t('easyDDB - Ding User Profile'),
    );
  }

  /**
   * Set up test.
   */
  public function setUp() {
    $this->profile = 'ding2';

    parent::setUp('alma', 'ding_user_profile');

    // Test library URL.
    variable_set('alma_base_url', $this->alma_url);
  }

  public function testAdminUI() {
    $admin = $this->drupalCreateUser(array('administer ding provider', 'manage user profile features'));
    $this->drupalLogin($admin);

    $this->drupalGet($this->getAbsoluteUrl('admin/config/ding/user_profile'));
    $this->assertText(t('The following fields will contain the description supplied below, however they might be hidden.'));
  }

